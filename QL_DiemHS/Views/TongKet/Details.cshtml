<section class="container">
	<h4 class=" my-3 text-secondary d-flex justify-content-between align-items-center">
		<div style="font-size: 19px;">
			Mã học sinh: @ViewBag.HocSinh.MaHS</br>
			<span>Họ và tên: @ViewBag.HocSinh.TenHS</span>
		</div>
		
		<div style="margin-right: 1rem">
			<a asp-controller="TongKet" asp-action="Home" class="btn btn-danger">Trang chủ</a>
		</div>
	</h4> 

	<table class="table mt-4">
		<thead class="text-primary">
			<th>STT</th>
			<th>Tên môn</th>
			<th>Diem 15p</th>
			<th>Diem 1t</th>
			<th>Diem GK</th>
			<th>Diem CK</th>
			<th>Diem TB</th>
		
		</thead>

		<tbody>
			@{
				int i = 1;
			}
			@foreach (var item in @ViewBag.DsMonHoc)
			{
				<tr>
					<td>@i</td>
					<td>@item.MonHoc.TenMon</td>
					<td>@item.Diem15p</td>
					<td>@item.Diem1t</td>
					<td>@item.DiemGk</td>
					<td>@item.DiemCk</td>
					<td>@item.DiemTrungBinh</td>
					
				</tr>
				i++;
			}
		</tbody>
	</table>

	<div style="font-size: 18px; margin-top: 2rem; color: orange;">
		<h5>Điểm tổng kết: @ViewBag.TongTB</h5>
		<p>Xếp loại: <span style="color: red; font-weight: 500">@ViewBag.XepLoai</span></p>
	</div>
</section>