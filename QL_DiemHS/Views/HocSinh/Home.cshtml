<section class="container mt-5">
	<h2 class="my-4 d-flex justify-content-between align-items-center">
		Danh sách học sinh
		<div>
			<a asp-action="Create_HocSinh" class="btn btn-success mt-3">Thêm học sinh</a>
			<a asp-controller="Home" asp-action="Index" class="btn btn-danger mx-5 mt-3">Trang chủ</a>
		</div>
	</h2>

	<table class="table">
		<thead>
			<th>STT</th>
			<th>Mã học sinh</th>
			<th>Họ và tên</th>
			<th></th>
		</thead>

		@model IEnumerable<HocSinh>
		<tbody>
			@{int i = 1;}
			@foreach (var item in @Model)
			{
				<tr>
					<td width="10%">@i</td>
					<td width="20%">@item.MaHS</td>
					<td width="40%">@item.TenHS</td>
					<td>
						<a asp-action="Edit_HocSinh" asp-route-mahs="@item.MaHS" class="text-primary mx-2">Sửa</a>
						<a asp-action="Detele" asp-route-mahs="@item.MaHS" class="text-danger mx-2">Xóa</a>
					</td>
				</tr>

				i++;
			}
		</tbody>
	</table>
</section>

